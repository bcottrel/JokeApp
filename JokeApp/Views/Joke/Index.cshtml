@model IEnumerable<JokeApp.Models.Joke>
<p>
    <a asp-action="InputForm" class="btn btn-primary text-white">
        <i class="bi bi-plus-circle"></i> &nbsp; Create New
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JokeQuestion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JokeAnswer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="mx-2 w-50">
                    @Html.DisplayFor(modelItem => item.JokeQuestion)
                </td>
                <td id="jokes">
                    <button class="btn joke-btn text-black" style="width: 200px" onclick="help()">
                        @Html.DisplayFor(modelItem => item.JokeAnswer)
                    </button>
                </td>
                <td class="w-20">
                    <a asp-action="Edit" asp-route-id="@item.Id"
                   class="btn btn-primary mx-2 w-50">
                        <i class="bi bi-pencil"></i>
                        &nbsp; Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id"
                   class="btn btn-secondary mx-2 w-50">
                        <i class="bi bi-card-text"></i>
                        &nbsp; Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id"
                   class="btn btn-danger mx-2 w-50">
                        <i class="bi bi-trash3"></i>
                        &nbsp; Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">

    let test = document.getElementsByClassName("joke-btn");
    for (let i = 0; i < test.length; i++) {
        test[i].addEventListener('click', () => {
            test[i].style.background = "white"
        });
    }
</script>